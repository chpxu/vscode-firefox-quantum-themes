{
  "name": "firefox-quantum-themes",
  "displayName": "Firefox Quantum Themes",
  "description": "Themes for VSCode, based off Firefox Quantum DevTools.",
  "version": "2.0.0",
  "publisher": "beastdestroyer",
  "repository": {
    "type": "git",
    "url": "https://github.com/beastdestroyer/vscode-firefox-quantum-themes"
  },
  "scripts": {
    "generate": "ts-node ./scripts/generate.ts",
    "lint": "yarn run eslint ./scripts"
  },
  "license": "MIT",
  "icon": "icon.png",
  "keywords": [
    "firefox",
    "devtools",
    "theme",
    "themes",
    "fire",
    "quantum",
    "dark",
    "light",
    "mozilla"
  ],
  "engines": {
    "vscode": "^1.26.0"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Firefox Quantum Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/Quantum Dark.json"
      },
      {
        "label": "Firefox Quantum Light",
        "uiTheme": "vs",
        "path": "./themes/Quantum Light.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "eslint": "^8.48.0"
  }
}
